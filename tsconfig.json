{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "AMF Store",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["ES2020", "dom", "WebWorker"],
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./build",
    "baseUrl": ".",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "types": [ "@types/wicg-file-system-access"]
  },
  "include": [
    "src/**/*",
    "src/node.ts",
    "src/worker.index.ts"
  ]
}
